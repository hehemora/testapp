<h1>Новая статья</h1>
<%= form_with model: @article, url: cms_articles_path do |f| %>
  <div>
      <% if @article.errors.any?%>
      <div class=”alert alert-danger”>
          <% @article.errors.full_messages.each do |message| %>
          <div><%= message %></div>
          <% end %>
      </div>
    <% end %>
    </div>
  <div class = "mb-3">
    <%= f.label :title, "Заголовок" %><br>
    <%= f.text_field :title, class: "articletitle"%>
  </div>
  <div class = "mb-3">
    <%= f.label :body, "Текст статьи" %><br>
    <%= f.text_area :body, class: "articlebody" %>
  </div>
  <p>
    <%= f.submit 'Сохранить статью', class: "button" %>
  </p>
<% end %>