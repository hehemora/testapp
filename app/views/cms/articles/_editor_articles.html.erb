<%= form_with model: @article, url: savefix_cms_article_path(@article.id), method: "patch" do |f| %>
  <div>
  <%= csrf_meta_tags %>
      <% if @article.errors.any?%>
      <div class=”alert alert-danger”>
          <% @article.errors.full_messages.each do |message| %>
          <div><%= message %></div>
          <% end %>
      </div>
      <% end %>
  <% if ArticleStatus.find_by(id: @article.article_statuses_id).status == "draft" %>
    <div class = "mb-3">
      Статус статьи: Черновик <br>
      <%= f.label :title, "Заголовок" %><br>
      <%= f.text_field :title, class: "articletitle"%><br>
      <%= f.label :body, "Текст статьи" %><br>
      <%= f.text_area :body, class: "articlebody"%><br>
      <p>
        <%= f.submit 'Сохранить изменения', class: "button" %>
      </p>

    </div>
  <% else %>
    <div class = "mb-3">
      Статус статьи: Опубликовано <br>
      <%= f.label :title, "Заголовок" %><br>
      <%= f.text_field :title, class: "articletitle", :readonly=>true%><br>
      <%= f.label :body, "Текст статьи" %><br>
      <%= f.text_area :body, class: "articlebody", :readonly=>true%><br>
   
    </div>
  <% end %>
</div>
<% end %>
<% if ArticleStatus.find_by(id: @article.article_statuses_id).status == "draft" %>
  <%= render partial: 'cms/articles/delete_article_button'%>
  <%= render partial: 'cms/articles/publish_article_button'%>
<% else %>
  <%= render partial: 'cms/articles/delete_article_button'%>
<% end %>